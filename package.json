{
  "name": "flashwords",
  "version": "1.0.0",
  "description": "Application d'exercice de lecture rapide pour l'orthophonie",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:all": "electron-builder --win --mac --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "orthophonie",
    "lecture-rapide",
    "exercice",
    "education"
  ],
  "author": "FlashWords Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.flashwords.app",
    "productName": "FlashWords",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "script.js",
      "listes/**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!build.sh",
      "!start.sh",
      "!server.py",
      "!assets",
      "!build-all.sh",
      "!BUILD.md"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "asarUnpack": [],
    "asar": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Education",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
