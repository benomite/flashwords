{
  "name": "flashwords",
  "version": "1.0.0",
  "description": "Application d'exercice de lecture rapide pour l'orthophonie",
  "main": "lib/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:all": "electron-builder --win --mac --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "node tests/test-app.js",
    "test:cross-platform": "node tests/test-cross-platform.js",
    "test:all": "npm run test && npm run test:cross-platform"
  },
  "keywords": [
    "orthophonie",
    "lecture-rapide",
    "exercice",
    "education"
  ],
  "author": {
    "name": "FlashWords Team",
    "email": "contact@flashwords.app"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.flashwords.app",
    "productName": "FlashWords",
    "directories": {
      "output": "dist"
    },
    "files": [
      "lib/**/*",
      "listes/**/*",
      "assets/**/*",
      "!node_modules",
      "!dist",
      "!tests/**/*",
      "!bin/**/*",
      "!config/**/*",
      "!*.md"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "asarUnpack": [],
    "asar": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/logo.png",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/logo.png",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education",
      "icon": "assets/logo.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
